.container
    h1 {{kit.kitName}}
    .row
        .col-md-6
            h3(ng-show="kit.inStock") In Stock
            h3 Aquired on {{kit.aquiredDate | date}}

        .col-md-3
            .panel.panel-primary
                .panel-heading Tags
                .panel-body
                    div(ng-repeat="tag in kit.tags") {{tag}}

        .col-md-3
            .panel.panel-primary
                .panel-heading Files
                .panel-body
                    div(ng-repeat="fileId in kit.fileIds") {{$index}}Â {{fileId}}

        .row
            .col-md-11.show-grid
                div(style="height: 200px")
                    carousel(interval="1000")
                        slide(ng-repeat="slide in slides" active="slide.active")
                            img(ng-src="{{slide.image}}" style="width:auto;height:100px")

                ul.image(rn-carousel rn-carousel-controls rn-carousel-buffered)
                    li(ng-repeat="image in images")
                        .bgimage(ng-style="{'background-image': 'url({{image.image}})'}")

            .col-md-1
                button.btn.btn-primary(ng-click="uploadImage({{kit_id}})") Upload image(s)

.container
    h1 {{kit.kitName}}
    .row
        .col-md-6
            h3(ng-show="kit.inStock") In Stock
            h3 Aquired on {{kit.aquiredDate | date}}

        .col-md-4
            .panel.panel-primary
                .panel-heading Tags
                .panel-body
                    div(ng-repeat="tag in kit.tags") {{tag}}


        .col-md-2
            .row
                button.btn.btn-primary(ng-click="uploadImage({{kit_id}})") Upload image(s)
            .row
                button.btn.btn-primary(ng-model="showCarousel" ng-click="showCarousel = !showCarousel") Show image(s)

        .row
            .col-md-9.show-grid
                div(style="height: 305px" id="carousel" ng-show="showCarousel")
                    carousel(interval="carouselInterval")
                        slide(ng-repeat="slide in slides" active="slide.active")
                            img(ng-src="{{slide.image}}" style="margin-auto")
                            .carousel-caption
                            h4 Slide {{$index}}
                            p Some text

            .col-md-3
                .panel.panel-primary
                    .panel-heading Files
                    .panel-body
                        div(ng-repeat="fileId in kit.fileIds") {{$index}}Â {{fileId}}
